{
  "manifest_version": 3,
  "name": "BrowserLogger",
  "author": "marco2012",
  "description": "Log user interactions with the browser",
  "version": "1.0.4",
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  "background": {
    "service_worker": "background_service_worker.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": [
        "libs/jquery-3.4.1.min.js",
        "libs/moment.min.js",
        "utility_script.js",
        "content_script.js"
      ]
    }
  ],
  "permissions": [
    "tabs",
    "alarms",
    "bookmarks",
    "downloads",
    "history",
    "management",
    "notifications",
    "storage",
    "webNavigation"
  ],
  "action": {
    "default_icon": {
      "16": "icons/icon-16.png",
      "32": "icons/icon-32.png",
      "48": "icons/icon-48.png",
      "128": "icons/icon-128.png"
    },
    "default_popup": "browserAction/index.html",
    "default_title": "BrowserLogger"
  }
}
